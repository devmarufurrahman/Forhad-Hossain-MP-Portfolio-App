<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MediaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="মিডিয়া"
        app:titleTextColor="@color/black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/newsPost"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="8dp"
                    android:layout_marginVertical="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:layout_height="90dp"
                            android:src="@drawable/newspaper"
                            android:elevation="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Newspaper"
                            android:gravity="center"
                            />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/telivisionCard"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="8dp"
                    android:layout_marginVertical="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tv_reporter"
                            android:elevation="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Television Program"
                            android:gravity="center"
                            />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/socialCard"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="8dp"
                    android:layout_marginVertical="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/social_news"
                            android:elevation="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Media"
                            android:gravity="center"
                            />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/photoGalleryCard"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="8dp"
                    android:layout_marginVertical="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/gallery"
                            android:elevation="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photo Gallery"
                            android:gravity="center"
                            />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/videoGalleryCard"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="8dp"
                    android:layout_marginVertical="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_marginTop="20dp"
                            android:paddingBottom="5dp"
                            android:layout_height="90dp"
                            android:src="@drawable/video"
                            android:elevation="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Video Gallery"
                            android:gravity="center"
                            />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>